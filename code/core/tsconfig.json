{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@storybook/core/*": ["./src/*"],
      "@storybook/react": ["../renderers/react"]
    },
    "skipDefaultLibCheck": true,
    "target": "ES2022"
  },
  "include": ["src/**/*", "scripts/**/*", "*.d.ts"]
}
