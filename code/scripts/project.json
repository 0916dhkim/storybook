{
  "name": "scripts",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "type": "tools",
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/../{projectRoot}",
        "command": "yarn lint:js",
        "args": "--quiet"
      },
      "inputs": [
        "{workspaceRoot}/../{projectRoot}/**/*",
        "{workspaceRoot}/../{projectRoot}/{.eslintignore,.eslintrc.js}"
      ],
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/../{projectRoot}",
        "command": "yarn test"
      },
      "inputs": [
        "{workspaceRoot}/../{projectRoot}/**/*",
        "{workspaceRoot}/../{projectRoot}/{vitest.workspace.ts,vitest.helpers.ts,vitest-setup.ts}"
      ],
      "cache": true
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/../{projectRoot}",
        "command": "yarn check"
      },
      "inputs": [
        "{workspaceRoot}/../{projectRoot}/**/*",
        "{workspaceRoot}/../{projectRoot}/tsconfig.json"
      ],
      "cache": true
    },
    "check-templates": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}/../{projectRoot}",
        "command": "yarn get-template --check"
      }
    }
  }
}
