{
  "$schema": "../scripts/node_modules/nx/schemas/nx-schema.json",
  "extends": "../scripts/node_modules/nx/presets/npm.json",
  "nxCloudAccessToken": "NGVmYTkxMmItYzY3OS00MjkxLTk1ZDktZDFmYTFmNmVlNGY4fHJlYWQ=",
  "defaultBase": "next",
  "parallel": 8,
  "cli": {
    "packageManager": "yarn"
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "canTrackAnalytics": false,
        "showUsageWarnings": true
      }
    }
  },
  "targetDefaults": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          { "prefix": "workspace", "command": "yarn" },
          { "prefix": "scripts", "command": "yarn --cwd ../scripts" }
        ]
      },
      "inputs": [
        "{workspaceRoot}/package.json",
        "{workspaceRoot}/../scripts/package.json",
        "{workspaceRoot}/{addons,builders,frameworks,lib,presets,renderers,ui}/*/package.json"
      ],
      "cache": true
    },
    "build": {
      "executor": "nx:run-commands",
      "options": { "cwd": "{projectRoot}", "command": "yarn prep --reset" },
      "configurations": {
        "production": {
          "command": "yarn prep --reset --optimized"
        }
      },
      "inputs": [
        "production",
        "^production",
        "{workspaceRoot}/../scripts/prepare/{bundle,addon-bundle,esm-bundle}.ts"
      ],
      "dependsOn": [{ "target": "install", "projects": ["root"] }, "^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "check": {
      "inputs": ["default", "^production", "{workspaceRoot}/../scripts/prepare/check.ts"],
      "dependsOn": ["build", "^build"],
      "cache": true
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.json", "{workspaceRoot}/package.json"],
    "production": [
      "default",
      "!{projectRoot}/src/**/**/*.{test,spec,stories}.?(c|m)[jt]s?(x)?(.snap),",
      "!{projectRoot}/vitest.config.[jt]s",
      "!{projectRoot}/README.md",
      "!{projectRoot}/.eslintrc.{json,js}",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  }
}
