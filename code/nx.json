{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "nxCloudAccessToken": "NGVmYTkxMmItYzY3OS00MjkxLTk1ZDktZDFmYTFmNmVlNGY4fHJlYWQ=",
  "defaultBase": "next",
  "parallel": 8,
  "cli": {
    "packageManager": "yarn"
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "canTrackAnalytics": false,
        "showUsageWarnings": true
      }
    }
  },
  "targetDefaults": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn prep --reset"
      },
      "configurations": {
        "production": {
          "command": "yarn prep --reset --optimized"
        }
      },
      "inputs": [
        "production",
        "{workspaceRoot}/../scripts/prepare/{bundle,addon-bundle,esm-bundle}.ts"
      ],
      "dependsOn": [{ "target": "build", "dependencies": true }],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "check": {
      "inputs": ["default", "{workspaceRoot}/../scripts/prepare/check.ts"],
      "dependsOn": ["build", "^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": ["{workspaceRoot}/tsconfig.json"],
    "production": [
      "default",
      "!{projectRoot}/",
      "!{projectRoot}/src/**/**/*.{test,spec,stories}.?(c|m)[jt]s?(x)?(.snap),",
      "!{projectRoot}/vitest.config.[jt]s",
      "!{projectRoot}/README.md",
      "!{projectRoot}/.eslintrc.{json,js}",
      "!{projectRoot}/src/test-setup.[jt]s"
    ]
  }
}
