{
  "version": 2,
  "name": "monorepo",
  "public": true,
  "trailingSlash": true,
  "renderSingle": true,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { 
        "distDir": "built-storybooks",
        "trailingSlash": true,
        "renderSingle": true
       }
    }
  ],
  "build": {
    "env": {
      "DOTENV_DISPLAY_WARNING": "none",
      "STORYBOOK_EXAMPLE_APP":"true"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/built-storybooks/$1" }
  ]
}
